{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "tests", "drizzle.config.ts", "migrate.ts"],
  "exclude": ["node_modules", "dist"]
}
